{
  "manifest_version": 2,

  "name": "TracksFlow Downloader",
  "description": "__MSG_extDesc__",
  "version": "1.0.1",
  "default_locale": "ru",

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "content_scripts": [
	{
	  "js": ["js/tfd-content.js"],
	  "matches": ["*://tracksflow.com/*"],
      "run_at": "document_end"
    }
  ],

  "background": {
    "scripts": ["js/zip.js", "js/zip-fs.js", "js/zip-ext.js", "js/background.js"]
  },

  "permissions": [
    "http://*/",
    "https://*/"
  ],

  "web_accessible_resources": ["js/tfd-inject.js", "css/tfd-inject.css"]
}
